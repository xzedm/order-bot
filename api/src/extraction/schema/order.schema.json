{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "intent": { "type": "string", "enum": ["place_order", "check_status", "product_inquiry", "unknown"] },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sku": { "type": "string" },
          "name": { "type": "string" },
          "english_name": { "type": "string" },
          "qty": { "type": "integer", "minimum": 1 }
        },
        "required": ["name", "qty"]
      }
    },
    "products": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "english_name": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "phone": { "type": "string" }
      }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "required": ["intent", "confidence"]
}