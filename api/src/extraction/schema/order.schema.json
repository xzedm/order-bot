{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "intent": { "type": "string", "enum": ["place_order", "check_status", "unknown"] },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sku": { "type": "string" },
          "name": { "type": "string" },
          "qty": { "type": "integer", "minimum": 1 }
        },
        "required": ["name", "qty"]
      }
    },
    "customer": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "phone": { "type": "string" }
      }
    }
  },
  "required": ["intent"]
}
