generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  NEW
  PENDING
  CONFIRMED
  PAID
  SHIPPED
  CLOSED
  CANCELLED
}

model Customer {
  id        String    @id @default(cuid())
  phone     String    @unique
  name      String?
  email     String?
  locale    String?   @default("ru")
  tgUserId  String?
  createdAt DateTime  @default(now())
  orders    Order[]
  messages  Message[]
}

model Product {
  id         String      @id @default(cuid())
  sku        String      @unique
  name       String
  price      Decimal     @db.Decimal
  currency   String      @default("KZT")
  stockQty   Int         @default(0)
  isActive   Boolean     @default(true)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  orderItems OrderItem[]
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  role      String   @default("manager") // 'admin', 'manager', 'viewer'
  tgUserId  String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  
  // Relations
  managedOrders Order[]    @relation("OrderManager")
  activities    Activity[]
}

model Order {
  id          String      @id @default(cuid())
  number      String      @unique
  customer    Customer    @relation(fields: [customerId], references: [id])
  customerId  String
  status      OrderStatus @default(NEW)
  totalAmount Decimal     @db.Decimal
  currency    String      @default("KZT")
  source      String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  // Manager fields
  manager      User?     @relation("OrderManager", fields: [managerId], references: [id])
  managerId    String?
  managerNotes String?
  confirmedAt  DateTime?
  rejectedAt   DateTime?
  
  // Relations
  items       OrderItem[]
  messages    Message[]
  activities  Activity[]
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  product   Product @relation(fields: [productId], references: [id])
  productId String
  sku       String
  name      String
  qty       Int
  price     Decimal @db.Decimal
  amount    Decimal @db.Decimal
}

model Message {
  id         String      @id @default(cuid())
  customer   Customer    @relation(fields: [customerId], references: [id])
  customerId String
  order      Order?      @relation(fields: [orderId], references: [id])
  orderId    String?
  channel    String
  direction  String // in|out
  body       String
  meta       Json?
  createdAt  DateTime    @default(now())
  extraction Extraction?
}

model Extraction {
  id         String   @id @default(cuid())
  message    Message  @relation(fields: [messageId], references: [id])
  messageId  String   @unique
  intent     String
  confidence Float
  payload    Json
  createdAt  DateTime @default(now())
}

model Activity {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  actorType String   // 'customer', 'manager', 'system'
  actorId   String   // userId, customerId, or 'system'
  action    String   // 'created', 'confirmed', 'rejected', etc.
  payload   Json?
  createdAt DateTime @default(now())
  
  // Optional relation to user (for manager actions)
  actor     User?    @relation(fields: [actorId], references: [id])
}

model WebhookOutbox {
  id        String   @id @default(cuid())
  kind      String   // 'manager_notification', 'customer_notification'
  payload   Json
  status    String   @default("pending") // 'pending', 'sent', 'failed'
  attempts  Int      @default(0)
  nextRunAt DateTime @default(now())
  createdAt DateTime @default(now())
}